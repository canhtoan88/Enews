<div class="container mt-1">
	<nav aria-label="breadcrumb">
	  <ol class="breadcrumb">
	    <li class="breadcrumb-item"><a href="/index"><small>IShare</small></a></li>
	    <li class="breadcrumb-item"><a href="/ban-1"><small><%= article.kindname %></small></a></li>
	    <li class="breadcrumb-item active" aria-current="page"><small><%= article.title %></small> 
	    	<% if (num != null) { -%>
	    		<% if (num == 0) { %>
	    			<a href="/baiviet/luubaiviet/<%=article.titleurl%>/<%= article.id%>" class="badge badge-pill badge-dark">Lưu bài viết</a>
	    		<% } else { %>
	    			<i class="badge badge-pill badge-dark">Đã lưu</i>
	    		<% } %>
	    	<% } -%>
	    </li>
	  </ol>
	  <hr width="65%" align="left" style="border-style: dashed; left: 0">
	</nav>
	<div class="row">
		<div class="col-md-8">
			<!-- article's content -->
			<h3><%= article.title%></h3>
			<center><img style="max-height: 500px" src="<%= article.imagelink%>" alt="<%= article.title%>" class="img-fluid"></center>
			<p>Ngày đăng: <i class="text-success" id="date"><%= moment(article.date).calendar()%></i></p>
			<div><%- article.content%></div>
			<hr>

			<!-- Comment's content around -->
			<% if (comments) { -%>
				<p id="commentArea" style="color: green; font-size: 16px; margin-top: 16px"><b>BÌNH LUẬN (<%= comments.length %>)</b></p>
				<% for (comment of comments) { -%>
					<div class="containerct">
					  	<p id="<%= comment.id %>">
					  		<span style="color: orange;"><%= comment.fullname %></span>
					  		<i><%= moment(comment.date).calendar()%></i>

